<% layout("layouts/boilerplate.ejs") %>
<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row mb-3">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow card-rounded">
        <img
          src="https://images.unsplash.com/photo-1554284126-aa88f22d8b74?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1457&q=80"
          alt=""
          class="img-fluid card-image"
        />
        <div class="card-body">
          <h5 class="card-title">Register</h5>

          <form
            action="/register"
            method="POST"
            class="validated-form"
            novalidate
          >
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                required
                autofocus
              />
              <div class="invalid-feedback">
                Username must be between 3 to 30 characters.
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">Email</label>
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"
                required
              />
              <div class="invalid-feedback">Please enter valid email.</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="invalid-feedback">
                Password must be between 3 to 13 characters.
              </div>
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-sm btn-success">Register</button>
              <a href="/login" class="text-center">Login?</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
